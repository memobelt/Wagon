<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
    >

    <ImageButton
        android:id="@+id/add_button"
        android:layout_width="@dimen/add_button_dimension"
        android:layout_height="@dimen/add_button_dimension"
        android:src="@drawable/icn_add"
        app:layout_constraintBottom_toBottomOf="@id/wagon_entrance_text"
        app:layout_constraintTop_toTopOf="@id/wagon_entrance_text"
        />

    <TextView
        android:id="@+id/wagon_entrance_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/wagon_entrance_spacing"
        android:textSize="@dimen/wagon_entrance_text_size"
        app:layout_constraintLeft_toRightOf="@id/add_button"
        tools:text="Create caravan \n Hello"
        />

</android.support.constraint.ConstraintLayout>